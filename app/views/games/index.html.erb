<div class="container">
  <h1 class="text-center mb-5">All Games</h1>
  <div class="row">
    <% @games.each do |game| %>
      <div class="col-lg-4 mb-4">
        <div class="card">
          <div class="card-header">
            <h2>Winner- <%= game.winner %></h2>
          </div>
          <div class="card-body">
            <img src="<%= game.image_url %>" class="img-fluid">
            <h3 class="mt-3"><%= game.result %></h3>
            <%= link_to "View Game", game_path(game), class: "btn btn-success mt-3" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
