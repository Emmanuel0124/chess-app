<div class="container">
  <h1 class="text-center mb-5"> </h1>
  <div class="row">
    <div class="col-lg-6 mb-4">
      <div class="card">
        <div class="card-header">
          <h2>Winner- <%= @game.winner %></h2>
        </div>
        <div class="card-body">
          <img src="<%= @game.image_url %>" class="img-fluid">
          <h3 class="mt-3">Result: <%= @game.result %></h3>
          <%= link_to "Back to All Games", games_path, class: "btn btn-success mt-3" %>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>
